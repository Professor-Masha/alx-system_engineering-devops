#!/usr/bin/env bash
# This script configures Nginx to redirect /redirect_me to another page.

# Update the package list and install Nginx if not already installed
apt-get update -y
apt-get install -y nginx

# Create the HTML page to serve
echo "Hello World!" > /var/www/html/index.html

# Configure Nginx to handle the redirection
cat <<EOL > /etc/nginx/sites-available/default
server {
    listen      80 default_server;
    listen      [::]:80 default_server;
    root        /var/www/html;
    index       index.html index.htm;

    location / {
        try_files \$uri \$uri/ =404;
    }

    # Redirect /redirect_me to a new URL
    location /redirect_me {
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
    }
}
EOL

# Check Nginx configuration for errors
nginx -t

# Restart Nginx without using systemctl
service nginx restart

